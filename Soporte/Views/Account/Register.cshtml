@model Soporte.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<style>
    .title {
        width: 100%;
        float: left;
        line-height: 46px;
        font-size: 34px;
        font-weight: 700;
        letter-spacing: 2px;
        color: #ED2553;
        position: relative;
        color: white;
    }

    .container {
        width: 900px;
    }

    html {
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        font-size: 24px;
    }

    .titulos-inicio {
        font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
        color: #ffffff;
        font-size: 18px;
        font-weight: 400;
        text-align: center;
        background: #889ccf;
        margin: 0 0 25px;
        overflow: hidden;
        padding: 20px;
        border-radius: 35px 0px 35px 0px;
        -moz-border-radius: 35px 0px 35px 0px;
        -webkit-border-radius: 35px 0px 35px 0px;
        border: 2px solid #5878ca
    }

    *,
    *:before,
    *:after {
        -moz-box-sizing: inherit;
        box-sizing: inherit;
    }

    body {
        margin: 0;
        line-height: 1.5;
        background-image: url(https://padasystem.com.ar/wp-content/uploads/2017/04/reparacion-de-pc.jpg);
        font-family: Roboto, Helvectica, Arial, sans-serif;
        color: #333;
    }

    .texto-gonza {
        font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
        color: #ffffff;
        font-size: 18px;
        font-weight: 400;
        text-align: center;
        background: #889ccf;
        margin: 0 0 25px;
        overflow: hidden;
        padding: 20px;
        border-radius: 35px 0px 35px 0px;
        -moz-border-radius: 35px 0px 35px 0px;
        -webkit-border-radius: 35px 0px 35px 0px;
        border: 2px solid #5878ca
    }

    /* headers */

    h1 {
        font-family: "Roboto Slab", Times, "Times New Roman", serif;
        font-size: 2em;
    }


    /* form elements */

    label {
        display: block;
    }

    select,
    textarea,
    input {
        max-width: 100%;
        padding: 0;
        margin: 0;
        font-family: inherit;
        font-weight: inherit;
        font-size: inherit;
        color: inherit;
    }

        input[type=submit] {
            border: none;
            cursor: pointer;
        }


    /* vertical align snippet */

    .va-cont {
        display: table;
        table-layout: fixed;
        width: 100%;
        height: 100%;
    }

    .va-inn {
        display: table-cell;
        vertical-align: middle;
    }


    /* styles */

    .form-container {
        width: 80%;
        padding: 10px;
        margin: auto;
    }

    .form-heading {
        margin-top: 0;
        margin-bottom: 1.2em;
        text-align: center;
    }

    .form-heading-highlight {
        color: #009688;
    }

    .form-row {
        position: relative;
        margin-top: 30px;
    }

    .form-label {
        position: absolute;
        top: 17px;
        left: 20px;
        color: #999;
        cursor: text;
        transition: all .15s ease-in-out 0s;
    }

    .form-textbox {
        width: 600px;
        height: 50px;
    }
    
    .form-submit {
        width: 100%;
        padding: 20px;
    }

    .form-textbox {
        box-shadow: inset 0 0 10px rgba(0,0,0,.1);
    }

        .form-textbox:focus ~ .form-label,
        .form-textbox:valid ~ .form-label {
            top: -1.5em;
            left: 0;
            font-size: .8em;
            color: inherit;
            cursor: pointer;
        }

    .form-submit {
        font-size:25px;
        height:100px;
        width:450px;
        display:block;
        margin: auto;
        background-color: #009688;
        font-weight: 700;
        color: #fff;
        transition: opacity .15s ease-in-out 0s;
    }

        .form-submit:hover {
            opacity: .75;
        }

            .boton {
        align-content: center;
        text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
        text-align: center;
        text-decoration: none;
        font-family: 'Helvetica Neue', Helvetica, sans-serif;
        display: inline-block;
        color: #FFF;
        background: #7F8C8D;
        padding: 7px 20px;
        white-space: nowrap;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 100px;
        margin: 10px 5px;
        -webkit-transition: all 0.2s ease-in-out;
        -moz-transition: all 0.2s ease-in-out;
        -o-transition: all 0.2s ease-in-out;
        transition: all 0.2s ease-in-out;
    }
            
    .azul {
        background: #3498DB;
        box-shadow: 0px 5px 0px 0px #2980B9;
    }

        .azul:hover {
            background: #39a0e5;
        }

        .azul:active {
            box-shadow: 0px 2px 0px 0px #2980B9;
        }

        .verde{
  background: #2ECC71;
  box-shadow: 0px 5px 0px 0px #27AE60;
}

.verde:hover{
  background: #32db78;
}

.verde:active{
  box-shadow: 0px 2px 0px 0px #27AE60;
}

</style>


<body>
    <div class="container" style="background-image: url(https://image.freepik.com/foto-gratis/fondo-textura-madera-marron-claro_53876-75016.jpg)">


        <div class="row" style="padding-bottom: 5px; background-image: url(https://img.freepik.com/vector-gratis/elegante-fondo-blanco-textura_23-2148431731.jpg?size=626&ext=jpg)">
            <img src="~/Imagenes/foto 1.jpg" style="width: 175px;height: 175px" />
            <img src="~/Imagenes/foto 3.jpg" style="width: 500px;height: 140px" />
            <img src="~/Imagenes/foto 2.jpg" style="width: 175px;height: 175px;margin-left: 10px" />

        </div>

        <div class="row">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>Cree una cuenta nueva.</h2>

                @Html.ValidationSummary("", new { @class = "red" })
                <div class="row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 titulos-inicio" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-md-7 form-textbox" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 titulos-inicio" })
                    @Html.PasswordFor(m => m.Password, new { @class = "col-md-7 form-textbox" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 titulos-inicio" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-md-7 form-textbox" })
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="boton verde" value="Registrarse" />
                    </div>
                </div>
            }

            <div class="row">
                <input value="Atras" class="boton azul" onclick="history.back()" />
            </div>

        </div>
    </div>
</body>