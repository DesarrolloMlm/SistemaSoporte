@using Soporte.Models

@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}


<style>
    .title {
        width: 100%;
        float: left;
        line-height: 46px;
        font-size: 34px;
        font-weight: 700;
        letter-spacing: 2px;
        color: #ED2553;
        position: relative;
        color: white;
    }

    .container {
        width: 900px;
    }

    html {
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        font-size: 24px;
    }

    .prueba {
        margin-left:150px;
        -webkit-text-stroke: 1px black;
        color: transparent;
        font-size: 40px;
        font-family: arial;
    }

    .titulos-inicio {
        font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
        color: #ffffff;
        font-size: 18px;
        font-weight: 400;
        text-align: center;
        background: #889ccf;
        margin: 0 0 25px;
        overflow: hidden;
        padding: 20px;
        border-radius: 35px 0px 35px 0px;
        -moz-border-radius: 35px 0px 35px 0px;
        -webkit-border-radius: 35px 0px 35px 0px;
        border: 2px solid #5878ca
    }

    *,
    *:before,
    *:after {
        -moz-box-sizing: inherit;
        box-sizing: inherit;
    }

    body {
        margin: 0;
        line-height: 1.5;
        background-image: url(https://padasystem.com.ar/wp-content/uploads/2017/04/reparacion-de-pc.jpg);
        font-family: Roboto, Helvectica, Arial, sans-serif;
        color: #333;
    }

    .texto-gonza {
        font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
        color: #ffffff;
        font-size: 18px;
        font-weight: 400;
        text-align: center;
        background: #889ccf;
        margin: 0 0 25px;
        overflow: hidden;
        padding: 20px;
        border-radius: 35px 0px 35px 0px;
        -moz-border-radius: 35px 0px 35px 0px;
        -webkit-border-radius: 35px 0px 35px 0px;
        border: 2px solid #5878ca
    }

    /* headers */

    h1 {
        font-family: "Roboto Slab", Times, "Times New Roman", serif;
        font-size: 2em;
    }


    /* form elements */

    label {
        display: block;
        color: black;
        font-size: 20px;
    }

    select,
    textarea,
    input {
        max-width: 100%;
        padding: 0;
        margin: 0;
        font-family: inherit;
        font-weight: inherit;
        font-size: inherit;
        color: inherit;
    }

        input[type=submit] {
            border: none;
            cursor: pointer;
        }


    /* vertical align snippet */

    .va-cont {
        display: table;
        table-layout: fixed;
        width: 100%;
        height: 100%;
    }

    .va-inn {
        display: table-cell;
        vertical-align: middle;
    }


    /* styles */

    .form-container {
        width: 80%;
        padding: 10px;
        margin: auto;
    }

    .form-heading {
        margin-top: 0;
        margin-bottom: 1.2em;
        text-align: center;
    }

    .form-heading-highlight {
        color: #009688;
    }

    .form-row {
        position: relative;
        margin-top: 30px;
    }

    .form-label {
        position: absolute;
        top: 17px;
        left: 20px;
        color: #999;
        cursor: text;
        transition: all .15s ease-in-out 0s;
    }

    .form-textbox,
    .form-submit {
        width: 100%;
        padding: 20px;
    }

    .form-textbox {
        box-shadow: inset 0 0 10px rgba(0,0,0,.1);
    }

        .form-textbox:focus ~ .form-label,
        .form-textbox:valid ~ .form-label {
            top: -1.5em;
            left: 0;
            font-size: .8em;
            color: inherit;
            cursor: pointer;
        }

    .form-submit {
        font-size: 25px;
        height: 100px;
        width: 450px;
        display: block;
        margin: auto;
        background-color: #009688;
        font-weight: 700;
        color: #fff;
        transition: opacity .15s ease-in-out 0s;
    }

        .form-submit:hover {
            opacity: .75;
        }

    .boton {
        align-content: center;
        text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
        text-align: center;
        text-decoration: none;
        font-family: 'Helvetica Neue', Helvetica, sans-serif;
        display: inline-block;
        color: #FFF;
        background: #7F8C8D;
        padding: 7px 20px;
        white-space: nowrap;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 100px;
        margin: 10px 5px;
        -webkit-transition: all 0.2s ease-in-out;
        -moz-transition: all 0.2s ease-in-out;
        -o-transition: all 0.2s ease-in-out;
        transition: all 0.2s ease-in-out;
    }
    .rojo{
  background: #E74C3C;
  box-shadow: 0px 5px 0px 0px #C0392B;
}

.rojo:hover{
  background: #ff5242;
}

.rojo:active{
  box-shadow: 0px 2px 0px 0px #C0392B;
}


    .azul {
        background: #3498DB;
        box-shadow: 0px 5px 0px 0px #2980B9;
    }

        .azul:hover {
            background: #39a0e5;
        }

        .azul:active {
            box-shadow: 0px 2px 0px 0px #2980B9;
        }

        .verde{
  background: #2ECC71;
  box-shadow: 0px 5px 0px 0px #27AE60;
}

.verde:hover{
  background: #32db78;
}

.verde:active{
  box-shadow: 0px 2px 0px 0px #27AE60;
}

        .validacion-datos{
            color:red;
            font-size:10px;
        }

        .texto-adentro{
            color:white;
        }
</style>



<body>
    <div class="container" style="background-image: url(https://image.freepik.com/foto-gratis/fondo-textura-madera-marron-claro_53876-75016.jpg)">

        <div class="row" style="padding-bottom: 5px;background-image: url(https://img.freepik.com/vector-gratis/elegante-fondo-blanco-textura_23-2148431731.jpg?size=626&ext=jpg)">
            <img src="~/Imagenes/foto 1.jpg" style="width: 175px;height: 175px" />
            <img src="~/Imagenes/foto 3.jpg" style="width: 500px;height: 140px" />
            <img src="~/Imagenes/foto 2.jpg" style="width: 175px;height: 175px;margin-left: 10px" />

        </div>

        <div class="row">
            <img src="~/Imagenes/inicio sesion.jpg" style="width: 400px;height: 150px;margin: auto;display: block" />
        </div>
        <div class="row">
            @* Parte para el inicio de Sesion con usuario y contraseña *@
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @*Mail usuarios*@

                <div class="row">
                    @*Validacion del mail y contraseña*@
                    @Html.ValidationSummary(true, "", new { @class = "red" })

                    @*Nombre de afuera del panel*@
                    @Html.LabelFor(m => m.Email, "Usuario: ", new { @class = "col-md-4 prueba" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validacion-datos" })

                </div>

                @*Contraseña*@
                <div class="row">

                    @*Nombre de afuera del panel*@
                    @Html.LabelFor(m => m.Password, "Contraseña: ", new { @class = "col-md-4 prueba" })

                    @Html.PasswordFor(m => m.Password, new { @class = "" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validacion-datos" })
                </div>

                @*Para recordar la cuenta*@
                <div class="row">
                    <div class="col-md-offset-1 col-md-5" style="margin-left:300px">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>

                @*Boton de inicio de sesion*@
                <div class="row">
                    <div class="col-md-3" style="margin-left:200px">
                        <input type="submit" value="Iniciar sesión" class="boton verde" />
                    </div>

                    <div class="col-md-3">
                        <a class="boton rojo" href="~/Account/Register">Registrarse</a>
                    </div>

                </div>
            }
        </div>


        <div class="row">
            <div class="boton azul">
                @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword", new {@style = "color:white"})
            </div>


        </div>
    </div>

    @* Para agregar con inicio de sesion con fb, tw, ig *@
    @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
